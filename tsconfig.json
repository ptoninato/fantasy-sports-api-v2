{  
  "compilerOptions": {  
  "target": "es6",  
    "module": "commonjs",  
    "rootDir": "src",  
    "outDir": "build",  
    "sourceMap": true,  
    "resolveJsonModule": true,  
    "lib": ["es6", "dom"],  
    "esModuleInterop": true,
    "skipLibCheck": true
  },  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}  